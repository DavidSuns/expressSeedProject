html
  head
    title!= title
    meta(charset="utf-8")
    link(rel="stylesheet", type="text/css" href="/css/style.css")
  body
    include ./header.jade
    each post in posts 
      p
        h2
         a(href="/u/#{post.name}/#{post.time.day}/#{post.title}") 
         != post.title
      p.info
        | 作者：
        a(href="/u/#{post.name}")
        != post.name
        | 日期：
        != post.time.minute
      p.
        != post.post
        
    include ./paging.jade
