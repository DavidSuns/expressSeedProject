html
  head
    title!= title
    meta(charset="utf-8")
    link(rel="stylesheet", type="text/css" href="/css/style.css")
  body
    include ./header.jade
    each post in posts
      p
        h2
          a(href="/u/#{post.name}/#{post.time.day}/#{post.title}") 
          != post.title
          a(href="/u/#{post.name}")
            img(class="r_head" src="#{post.head}")
      p.info
        | 作者：
        a(href="u/#{post.name}") 
        !=post.name
        | 日期：
        != post.time.minute
        | 标签：
          each tag in post.tags
            if tag
              a(class="tag" href="/tags/#{tag}") != tag
      p.
        != post.post
        
    include ./paging.jade
